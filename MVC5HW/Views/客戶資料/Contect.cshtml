@model 客戶聯絡人ListVM

@{
    ViewBag.Title = "客戶聯絡人列表";
    Layout = "";
}

<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Contect", "客戶資料", new { 客戶Id = Model.客戶Id }, FormMethod.Post))
{
    <table class="table">
        <tr>
            <th>
                職稱
            </th>
            <th>
                姓名
            </th>
            <th>
                Email
            </th>
            <th>
                手機
            </th>
            <th>
                電話
            </th>
            <th>
                客戶名稱
            </th>
            <th></th>
        </tr>

        @for (var i = 0; i < Model.客戶聯絡人.Count(); i++)
        {
            @Html.HiddenFor(ModelIetm => Model.客戶聯絡人[i].Id)
            <tr>
                <td>
                    @Html.EditorFor(model => Model.客戶聯絡人[i].職稱, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.客戶聯絡人[i].職稱, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.客戶聯絡人[i].姓名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.客戶聯絡人[i].Email)
                </td>
                <td>
                    @Html.EditorFor(model => Model.客戶聯絡人[i].手機, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.客戶聯絡人[i].手機, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(model => Model.客戶聯絡人[i].電話, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => Model.客戶聯絡人[i].電話, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.客戶聯絡人[i].客戶名稱)
                </td>
                <td>
                    @Html.ActionLink("Dele te", "Delete", new { id = Model.客戶聯絡人[i].Id })
                </td>
            </tr>
        }
    </table>
    <button class="btn btn-primary">批次更新</button>
}
@section breadcrumb{
    <li><a href="#">@ViewBag.Title</a></li>
}
<script src="~/BootstrapMetro/js/jquery-1.9.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/BootstrapMetro/js/bootstrap.min.js"></script>
