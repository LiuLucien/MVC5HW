
@{
    ViewBag.Title = "JsonTest";
}

<h2>JsonTest</h2>

<div ng-app ng-controller="MainCtrl">

    <button ng-click="get()">取得 JsonTest 資料</button>
    <hr />

    @* table.table>tr*2>td*5 *@

    <table class="table">
        <tr>
            <th>客戶名稱</th>
        </tr>
        <tr ng-repeat="item in data">
            <td>{{item.客戶名稱}}</td>
        </tr>
    </table>
</div>

@section Scripts
    {
    <script src="~/Scripts/angular.js"></script>
    <script>

        function MainCtrl($http, $scope) {
            $scope.get = function () {
                $http.get('/AR/JsonTest').then(function (result) {
                    //console.log(result.data);

                    $scope.data = result.data;

                });
            };
        }

        $('#btnJsonTest').bind('click', function () {
            $.getJSON('/AR/JsonTest', '', function (data) {
                console.log(data);
            })
        });
    </script>
}